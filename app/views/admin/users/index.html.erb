<%- model_class = User -%>
<div class="page-header">
  <h1>Usuários</h1>
</div>
<table class="table table-striped">
  	<thead>
    	<tr>
      		<th>Nome</th>
      		<th>Email</th>
      		<th>Criado em</th>
      		<th>Ações</th>
    	</tr>
  	</thead>
  	<tbody>
    	<% @users.each do |user| %>
      		<tr>
        		<td><%= user.name %></td>
        		<td><%= user.email %></td>
        		<td><%=l user.created_at, :format => "%d/%m/%Y" %></td>
        		<td>
          			<%= link_to "Visualizar",
						admin_user_path(user), 
						:class => 'btn btn-primary btn-xs' %>
        		</td>
      		</tr>
    	<% end %>
  	</tbody>
</table>

<%= link_to "Novo Usuário",
            new_admin_user_path,
            :class => 'btn btn-primary' %>
